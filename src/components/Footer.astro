<style>
    footer {
        background-color: #f5f5f5;
    }

    .link-section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-block: 2.5rem;
        padding-inline-start: 2rem;
        gap: 2rem;
    }

    .link-section .footer-links {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;

        :first-child {
            font-weight: 600;
            margin-block-end: 0.5rem;
        }

        a {
            color: var(--text-color);
            text-decoration-line: none;

            &:hover {
                text-decoration-line: underline;
            }
        }
    }

    .footer-container {
        display: flex;
        justify-content: center;
        align-items: center;
        block-size: 4.5rem;
        background-color: black;
        color: var(--text-color-dim);
    }

    .footer-container small {
        font-size: small;
        text-align: center;
    }

    .credits-container {
        position: relative;
    }

    .credits-button {
        color: var(--text-color-dim);
        position: relative;
        border: none;
        background-color: transparent;

        &:hover {
            color: var(--primary-color-text);
        }
    }

    .credits-label {
        text-decoration: none;
        position: relative;

        & .caret-icon {
            transition: transform 0.2s;
            position: absolute;
            top: calc(50% - 5px);
            right: -0.75rem;
        }
    }

    .credits-container:has(:popover-open) {
        .credits-label {
            color: var(--primary-color-text);
        }

        .caret-icon {
            transform: rotate(-90deg);
            fill: var(--primary-color-text);
        }
    }

    [popover] {
        inset: unset;
        bottom: 3rem;
        right: 3rem;
        margin: 0;
        color: var(--text-color);
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 0.5rem;
        padding-block: 1rem;
        padding-inline: 1.5rem;
        white-space: nowrap;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.3);

        & li {
            list-style: none;
            margin-inline: 0;
        }

        & li > a > .dia-arrow {
            position: relative;
            top: 0.2rem;
            color: var(--primary-color-text);
            margin-inline-start: 1ch;
        }

        &:popover-open {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
    }

    .contact-details {
        color: var(--text-color-dim);

        &:hover {
            color: var(--primary-color-text);
        }
    }

    @media (min-width: 40rem) {
        .link-section {
            flex-direction: row;
            padding-inline-start: 0;
            gap: 8rem;
        }

        [popover] {
            right: unset;
            margin-inline-start: 10rem;
        }
    }
</style>
